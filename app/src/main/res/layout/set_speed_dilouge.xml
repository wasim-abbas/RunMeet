<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dilog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/set_speed_amp_goal"
        android:textColor="@color/light_black2"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/set_goal"
        android:textColor="@color/light_black2"
        android:textSize="@dimen/_12ssp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/layout_gradient"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/_2sdp">

        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/progress_label2"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="normal" />

        <SeekBar
            android:id="@+id/mySeekBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@id/txtProgress"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:progress="10"
            android:progressDrawable="@drawable/rounded_progress"
            android:stepSize="1"
            android:thumb="@drawable/rounded_progress"
            android:valueFrom="0"
            android:valueTo="100"
            app:labelBehavior="withinBounds" />

        <TextView
            android:id="@+id/txtKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mySeekBar"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/montserrat_medium"
            android:text="0 KM"
            android:textColor="#191919"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mySeekBar"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="end"
            android:text="100 KM"
            android:textColor="#191919"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/set_speed"
        android:textColor="@color/light_black2"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtCartoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_color"
            android:drawableStart="@drawable/ic_cartoon"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/_0_3_km_h"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/_10ssp"

            />

        <TextView
            android:id="@+id/btnBear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_color"
            android:drawableStart="@drawable/ic_bear"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/_3_6_km_h"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/_10ssp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:weightSum="2">

        <TextView
            android:id="@+id/btntiger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_color"
            android:drawableStart="@drawable/ic_tiger"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/_6_9_km_h"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/btnLeopard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_color"
            android:drawableStart="@drawable/ic_leopard"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_6sdp"
            android:text="@string/_9_12_km_h"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/_10ssp"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />


</LinearLayout>