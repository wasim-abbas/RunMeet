<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RunMeet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="StyleRippleDefault">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/rippleColor</item>
        <item name="mrl_rippleDuration">350</item>
        <item name="mrl_rippleFadeDuration">75</item>
    </style>


    <style name="StyleRippleCircle" parent="StyleRippleDefault">
        <item name="mrl_rippleRoundedCorners">48dp</item>
    </style>

    <style name="Custom_Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

</resources>