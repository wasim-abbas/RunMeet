<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.fragments.authFragments.ResetPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/layout_gradient">

        <TextView
            android:id="@+id/viewSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/choose_password"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@id/viewSignUp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/white" />

        <View
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@id/btnBack"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_34sdp"
            android:background="@color/white" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/reset_pass" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/light_pink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/choose_new_password"
        android:textColor="@color/dark_black2"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@drawable/pink_stroke_bg"
        android:fontFamily="@font/montserrat_medium"
        android:hint="@string/enter_new_password"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingStart="@dimen/_16sdp"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/_10ssp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/pink_stroke_bg"
        android:fontFamily="@font/montserrat_medium"
        android:hint="@string/confirm_password"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingStart="@dimen/_16sdp"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/_10ssp" />

    <TextView
        android:id="@+id/btnProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/proceed2"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <View
            android:id="@+id/v1"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/light_pink"
            />
        <View
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/light_pink"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_4sdp"
            />
    </LinearLayout>



</LinearLayout>